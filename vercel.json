{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/public/index.html" // Serve index.html for all static routes
    },
    {
      "src": "/api/socket.io", // WebSocket upgrade path
      "dest": "/server.js"
    },
    {
      "src": "/api", // API route for health check or other endpoints
      "dest": "/server.js"
    }
  ]
}
